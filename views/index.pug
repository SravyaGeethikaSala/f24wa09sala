extends layout

block content
  h1= title
  p Welcome to #{title}

  // sample button 
  button(type="button", class="btn btn-primary", onclick="boost()") sample button 
  div#boost Add in extra 

  script. 
      let value = 0;
      let amt = 3; 

      function boost(){
        amt += 1;
        value += amt;
        document.getElementById('boost').textContent = 'Boosted $(value) by $(amt).';
      }
      